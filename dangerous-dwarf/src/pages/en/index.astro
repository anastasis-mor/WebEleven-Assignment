---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/astro/Header.astro";
import HeroSection from "../../components/astro/HeroSection.astro";
import AboutSection from "../../components/astro/AboutSection.astro";
import ProjectsGrid from "../../components/svelte/ProjectsGrid.svelte";
import ContactForm from "../../components/svelte/ContactForm.svelte";
import Footer from "../../components/astro/Footer.astro";
import { fetchAbout } from "../../helpers/api";

import en from "../../locales/en.json";

const lang = "en";
const t = en;
const about = await fetchAbout(lang, Astro.url);
---

<BaseLayout
  title={t.seo.title}
  description={t.seo.description}
  lang={lang}
>
  <div slot="header">
    <Header lang={lang} t={t}/>
  </div>

  <HeroSection lang={lang} t={t} />
  <AboutSection about={about} />
  <ProjectsGrid client:visible t={t} />
  <ContactForm client:visible t={t} />
  <Footer/>
</BaseLayout>
