---
const { title = "Portfolio", lang = "en" } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>

    <!-- SEO basic tags -->
    <meta name="description" content="Personal portfolio website" />
    <meta name="keywords" content="portfolio, developer, web development" />

    <!-- You can add OpenGraph tags later -->
    <meta property="og:title" content={title} />

    <!-- Global stylesheet -->
    <link rel="stylesheet" href="/global.css" />
  </head>

  <body>
    <!-- Header goes here (injected from pages) -->
    <slot name="header" />

    <main>
      <!-- Page content goes here -->
      <slot />
    </main>

    <!-- Footer goes here -->
    <slot name="footer" />
  </body>
</html>