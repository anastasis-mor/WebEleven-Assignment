---
const { lang = "en", t } = Astro.props;
const base = `/${lang}`;
---

<section
  id="hero"
  class="relative min-h-screen flex items-center justify-center px-4 bg-neutral-950 text-white"
>


  <div class="max-w-4xl mx-auto text-center">
    

    <h1 class="text-4xl md:text-6xl font-extrabold leading-tight mb-6">
      {t.hero.title}
    </h1>

    <p class="text-lg md:text-xl text-white/70 max-w-2xl mx-auto mb-10">
      {t.hero.tagline}
    </p>

    <div class="flex justify-center gap-4 flex-wrap">
      <a
        href={`${base}#projects`}
        class="px-6 py-3 rounded-lg bg-orange-600 hover:bg-orange-700
               text-white font-semibold transition"
      >
        {t.hero.ctaProjects}
      </a>

      <a
        href={`${base}#contact`}
        class="px-6 py-3 rounded-lg border border-white/20
               hover:bg-white/5 text-white font-semibold transition"
      >
        {t.hero.ctaContact}
      </a>
    </div>

     <div
      class="inline-flex items-center gap-2 my-6 px-4 py-1.5 mb-6
             rounded-full border border-white/10
             bg-white/[0.04] backdrop-blur
             text-xs tracking-wide text-white/70
             animate-hero-badge"
    >
      React • TypeScript • JavaScript • Java
    </div>

    <div class="mt-16 text-white/40 text-sm animate-bounce">
      ↓ Scroll
    </div>
  </div>
</section>

