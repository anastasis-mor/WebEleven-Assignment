---
const { lang = "en", t } = Astro.props;
const base = `/${lang}`;
---

<section
  id="hero"
  class="pt-40 pb-24 px-4 text-center bg-gradient-to-b from-neutral-900 to-neutral-800 text-white"
>
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl md:text-5xl font-extrabold mb-3">
      {t.hero.title}
    </h1>

    <p class="text-lg md:text-xl text-white/80 mb-8">
      {t.hero.tagline}
    </p>

    <div class="flex justify-center gap-4 flex-wrap">
      <a
        href={`${base}#projects`}
        class="px-6 py-3 rounded-md bg-slate-900 hover:bg-slate-800 text-white font-semibold transition"
      >
        {t.hero.ctaProjects}
      </a>

      <a
        href={`${base}#contact`}
        class="px-6 py-3 rounded-md bg-gray-200 hover:bg-white text-black font-semibold transition"
      >
        {t.hero.ctaContact}
      </a>
    </div>
  </div>
</section>
