---
const { lang = "en", t } = Astro.props;
const base = `/${lang}`;
---

<header
  class="fixed top-0 z-50 w-full
         bg-black/70 backdrop-blur-md
         border-b border-white/10"
>
  <nav class="mx-auto max-w-7xl px-4">
    <div class="flex h-16 items-center justify-between">

      <a href={base} class="text-2xl font-extrabold text-white">
        Anastasis<span class="text-orange-600">Dev</span><span>.</span>
      </a>

      <ul class="hidden md:flex items-center gap-6">
        <li>
          <a
            href={`${base}#hero`}
            class="text-white/80 hover:text-white transition"
          >
            {t.header.home}
          </a>
        </li>
        <li>
          <a
            href={`${base}#about`}
            class="text-white/80 hover:text-white transition"
          >
            {t.header.about}
          </a>
        </li>
                <li>
          <a
            href={`${base}#projects`}
            class="text-white/80 hover:text-white transition"
          >
            {t.header.projects}
          </a>
        </li>
                <li>
          <a
            href={`${base}#contact`}
            class="text-white/80 hover:text-white transition"
          >
            {t.header.contact}
          </a>
        </li>
      </ul>

      <div class="flex items-center gap-4">

        <div class="hidden md:flex items-center gap-2 text-md">
          <a
            href="/en/"
            class={lang === "en"
              ? "text-orange-600 font-semibold"
              : "text-white/80 hover:text-white"}
          >
            EN
          </a>
          <span class="text-white/40">|</span>
          <a
            href="/el/"
            class={lang === "el"
              ? "text-orange-600 font-semibold"
              : "text-white/80 hover:text-white"}
          >
            EL
          </a>
        </div>

        <button
          id="menu-btn"
          class="md:hidden text-white focus:outline-none"
          aria-label="Open menu"
        >
          â˜°
        </button>
      </div>
    </div>
  </nav>

  <div
  id="mobile-menu"
  class="hidden md:hidden
         fixed top-16 inset-x-0
         bg-black/95 backdrop-blur-md
         border-t border-white/10"
>
  <ul class="flex flex-col items-center gap-6 py-8">
    <li>
      <a href={`${base}#hero`} class="text-white/90 text-lg hover:text-orange-600 transition">
        {t.header.home}
      </a>
    </li>
    <li>
      <a href={`${base}#about`} class="text-white/90 text-lg hover:text-orange-600 transition">
        {t.header.about}
      </a>
    </li>
    <li>
      <a href={`${base}#projects`} class="text-white/90 text-lg hover:text-orange-600 transition">
        {t.header.projects}
      </a>
    </li>
    <li>
      <a href={`${base}#contact`} class="text-white/90 text-lg hover:text-orange-600 transition">
        {t.header.contact}
      </a>
    </li>

    <div class="flex gap-6 pt-4 text-sm">
      <a href="/en/" class={lang === "en" ? "text-orange-600 font-semibold" : "text-white/70"}>
        EN
      </a>
      <a href="/el/" class={lang === "el" ? "text-orange-600 font-semibold" : "text-white/70"}>
        EL
      </a>
    </div>
  </ul>
</div>
</header>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  if (btn && menu) {
    btn.addEventListener("click", () => {
      menu.classList.toggle("hidden");
    });

    menu.querySelectorAll("a").forEach(link => {
      link.addEventListener("click", () => {
        menu.classList.add("hidden");
      });
    });
  }
</script>
