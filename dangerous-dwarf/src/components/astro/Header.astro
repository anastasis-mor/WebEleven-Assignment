---
const { lang = "en", t } = Astro.props;
const base = `/${lang}`;
---

<header class="header">
  <nav class="nav">

    <a href={base} class="logo">
      Anastasis<span class="accent">.</span>
    </a>

    <ul class="nav-links">
      <li><a href={`${base}#hero`}>{t.header.home}</a></li>
      <li><a href={`${base}#about`}>{t.header.about}</a></li>
      <li><a href={`${base}#projects`}>{t.header.projects}</a></li>
      <li><a href={`${base}#contact`}>{t.header.contact}</a></li>
    </ul>

    <div class="lang-switch">
      <a href="/en/" class={lang === "en" ? "active" : ""}>EN</a>
      <span class="divider">|</span>
      <a href="/el/" class={lang === "el" ? "active" : ""}>EL</a>
    </div>

  </nav>
</header>


<style>
  .header {
    padding: 1rem 1rem;
    background: rgba(0, 0, 0, 0.7);
    position: fixed;
    top: 0;
    backdrop-filter: blur(8px);
    z-index: 100;
    width: 100%;
  }

  .nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin: 0 4rem;
  }

  .logo {
    font-size: 1.5rem;
    font-weight: 800;
    color: white;
    text-decoration: none;
  }

  .accent {
    color: #3b82f6;
  }

  .nav-links {
    list-style: none;
    display: flex;
    gap: 1.5rem;
    padding: 0;
  }

  .nav-links a {
    color: rgba(255, 255, 255, 0.85);
    text-decoration: none;
    font-size: 1rem;
    transition: color 0.2s ease;
  }

  .nav-links a:hover {
    color: white;
  }

  .lang-switch a {
    color: rgba(255, 255, 255, 0.75);
    padding: 0 0.3rem;
    text-decoration: none;
    transition: 0.2s ease;
  }

  .lang-switch a:hover {
    color: white;
  }

  .active {
    color: #3b82f6;
    font-weight: 600;
  }

  .divider {
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none; /* Later: replace with Svelte burger menu */
    }
  }
</style>
