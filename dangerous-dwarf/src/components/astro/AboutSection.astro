---
const { about } = Astro.props;
---

<section id="about" class="relative py-28 px-4 bg-neutral-950 text-white">
  <div class="max-w-6xl mx-auto">

    <h2 class="text-4xl md:text-5xl font-extrabold text-center mb-20">
      {about.title}
    </h2>

    <div class="grid gap-10 md:grid-cols-2 lg:grid-cols-3">

      <div
        class="group relative rounded-3xl border border-white/10 bg-white/[0.04]
               p-8 backdrop-blur-xl
               transition-all duration-300
               hover:-translate-y-1 hover:border-white/20"
      >
        <div class="absolute inset-0 -z-10 rounded-3xl bg-gradient-to-br from-orange-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition"></div>

        <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-orange-500/10 text-orange-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
              viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M16 18l6-6-6-6M8 6l-6 6 6 6" />
          </svg>
        </div>

        <h3 class="text-xl font-semibold mb-2">
          {about.card1Title}
        </h3>

        <p class="text-sm text-white/60 mb-4">
          {about.card1Subtitle}
        </p>

        <p class="text-white/80 leading-relaxed max-w-prose">
          {about.description}
        </p>
      </div>

      <div
        class="group relative rounded-3xl border border-white/10 bg-white/[0.04]
               p-8 backdrop-blur-xl
               transition-all duration-300
               hover:-translate-y-1 hover:border-white/20"
      >
        <div class="absolute inset-0 -z-10 rounded-3xl bg-gradient-to-br from-purple-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition"></div>

        <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-purple-500/10 text-purple-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
              viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
            <circle cx="12" cy="12" r="8" />
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M12 8v4l3 3" />
          </svg>
        </div>

        <h3 class="text-xl font-semibold mb-2">
          {about.card2Title}
        </h3>

        <p class="text-sm text-white/60 mb-4">
          {about.card2Subtitle}
        </p>

        <p class="text-white/80 leading-relaxed max-w-prose">
          {about.goalsDescription}
        </p>
      </div>

      <div
        class="group relative rounded-3xl border border-white/10 bg-white/[0.04]
               p-8 backdrop-blur-xl
               transition-all duration-300
               hover:-translate-y-1 hover:border-white/20"
      >
        <div class="absolute inset-0 -z-10 rounded-3xl bg-gradient-to-br from-emerald-500/10 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition "></div>

        <div class="mb-6 flex h-12 w-12 items-center justify-center rounded-xl bg-emerald-500/10 text-emerald-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none"
              viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.8">
            <path stroke-linecap="round" stroke-linejoin="round"
              d="M8 10h8M8 14h4m-2 6l-4-4H4a2 2 0 01-2-2V6a2 2 0 012-2h16a2 2 0 012 2v8a2 2 0 01-2 2h-6l-4 4z" />
          </svg>
        </div>

        <h3 class="text-xl font-semibold mb-2">
          {about.card3Title}
        </h3>

        <p class="text-sm text-white/60 mb-4">
          {about.card3Subtitle}
        </p>

        <p class="text-white/80 leading-relaxed max-w-prose">
          {about.interviewDescription}
        </p>
      </div>

    </div>
  </div>
</section>
