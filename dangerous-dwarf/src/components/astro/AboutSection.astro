---
const { about } = Astro.props;
---


<section id="about" class="py-20 px-4 bg-neutral-900 text-white">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-3xl font-extrabold mb-6 text-center">
      {about.title}
    </h2>

    <p class="text-white/80 mb-6">
      {about.description}
    </p>

    <h3 class="text-xl font-bold mt-8">
      {about.goalsTitle}
    </h3>
    <p class="text-white/80">
      {about.goalsDescription}
    </p>

    <h3 class="text-xl font-bold mt-8">
      {about.interviewTitle}
    </h3>
    <p class="text-white/80">
      {about.interviewDescription}
    </p>
  </div>
</section>


<style>
  .about-section {
    padding: 4rem 2rem;
    background: #111;
    color: #fff;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
  }

  .title {
    font-size: 2.4rem;
    font-weight: 800;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .subtitle {
    font-size: 1.4rem;
    font-weight: 700;
    margin-top: 2rem;
  }

  .description {
    font-size: 1.1rem;
    opacity: 0.85;
    line-height: 1.6;
    margin-top: 0.5rem;
  }
</style>
